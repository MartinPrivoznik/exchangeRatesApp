<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="exchangeRateApp.View.ChartsPage"
             Title="CHARTS" Icon="baseline_timeline_black_18dp.png"
             xmlns:viewmodels="clr-namespace:exchangeRateApp.ViewModel"
             BindingContext="{viewmodels:ChartsPageViewModel}">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Currency:" />
            <Picker ItemsSource="{Binding ChangeList}" SelectedItem="{Binding Selected}" ItemDisplayBinding="{Binding Name}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>