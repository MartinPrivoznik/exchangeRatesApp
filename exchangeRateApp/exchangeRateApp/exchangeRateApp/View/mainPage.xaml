<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="exchangeRateApp.View.mainPage"
             xmlns:viewmodels ="clr-namespace:exchangeRateApp.ViewModel"
             BindingContext="{viewmodels:mainViewModel}">
    <ContentPage.Content>
        <Grid Padding="10">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Label Text="Exchange Rate App" Grid.Row="0"/>
            <Picker 
            Title="Select a currency"
            ItemsSource="{Binding ChangeTypes}"
            ItemDisplayBinding="{Binding Name}"
            Grid.Row="0"/>

        </Grid>

    </ContentPage.Content>
</ContentPage>